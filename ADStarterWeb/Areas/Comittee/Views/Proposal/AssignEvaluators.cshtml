@model ADStarter.Models.ViewModels.ProposalAssignmentViewModel

@{
    ViewData["Title"] = "Assign Evaluators";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust path to your layout
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <h3>Add Evaluators for @Model.StudentName</h3>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <form asp-action="AssignEvaluators" method="post">
                    <input type="hidden" name="p_id" value="@Model.p_id" />
                    <input type="hidden" name="s_id" value="@Model.s_id" />

                    <div class="form-group mb-3">
                        <label>Evaluator 1</label>
                        <select name="s_evaluator1" class="form-control">
                            <option value="">Select Evaluator</option>
                            @foreach (var evaluator in Model.AvailableEvaluators)
                            {
                                <option value="@evaluator.Value" @(evaluator.Value == Model.s_evaluator1 ? "selected" : "")>@evaluator.Text</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Evaluator 2</label>
                        <select name="s_evaluator2" class="form-control">
                            <option value="">Select Evaluator</option>
                            @foreach (var evaluator in Model.AvailableEvaluators)
                            {
                                <option value="@evaluator.Value" @(evaluator.Value == Model.s_evaluator2 ? "selected" : "")>@evaluator.Text</option>
                            }
                        </select>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Assign Evaluators</button>
                        <a href="@Url.Action("ListProposals", "Proposal", new { area = "Comittee" })" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
