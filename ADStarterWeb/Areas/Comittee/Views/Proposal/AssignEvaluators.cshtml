@model ADStarter.Models.ViewModels.ProposalAssignmentViewModel

@{
    ViewData["Title"] = "Assign Evaluators";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust path to your layout
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Assign Evaluators for @Model.StudentName</h3>
        </div>
        <div class="card-body">
            <form asp-action="AssignEvaluators" asp-controller="Proposal" asp-area="Comittee" method="post">
                <input type="hidden" name="p_id" value="@Model.p_id" />
                <input type="hidden" name="s_id" value="@Model.s_id" />

                <div class="form-group">
                    <label>Evaluator 1</label>
                    <input type="text" name="s_evaluator1" class="form-control" value="@Model.s_evaluator1" />
                </div>

                <div class="form-group">
                    <label>Evaluator 2</label>
                    <input type="text" name="s_evaluator2" class="form-control" value="@Model.s_evaluator2" />
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">Assign Evaluators</button>
                    <a href="@Url.Action("ListProposals", "Proposal", new { area = "Comittee" })" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
