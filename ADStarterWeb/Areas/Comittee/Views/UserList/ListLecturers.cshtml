@model IEnumerable<ADStarter.Models.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "Lecturers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Lecturers</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">User Management</li>
                        <li class="breadcrumb-item active">Lecturers</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Matric Number</th>
                            <th>Full Name</th>
                            <th>Project Type</th>
                            <th>Course Description</th>
                            <th>Roles</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lecturer in Model)
                        {
                            <tr>
                                <td>@lecturer.user_matric</td>
                                <td>@lecturer.user_name</td>
                                <td>@lecturer.pt_ID</td>
                                <td>@lecturer.course_desc</td>
                                <td>@string.Join(", ", lecturer.roles)</td>
                                <td>
                                    @* <a asp-area="Comittee" asp-controller="UserList" asp-action="Edit" asp-route-userId="@lecturer.Id" class="btn btn-primary">Edit</a> *@
                                    <a href="@Url.Action("Edit", "UserList", new { area = "Comittee", userId = @lecturer.Id})" class="btn btn-primary">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
