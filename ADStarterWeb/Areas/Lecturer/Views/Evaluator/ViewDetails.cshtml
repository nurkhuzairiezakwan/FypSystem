@model ADStarter.Models.Proposal

@{
    ViewData["Title"] = "Proposal Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filePath = Url.Content($"{Model.p_file}");
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Evaluation Details</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Evaluator</li>
                        <li class="breadcrumb-item active">Proposal Details</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h4>Proposal Title: @Model.p_title</h4>
                <div class="pdf-viewer">
                    <iframe src="@filePath" width="75%" height="600px">
                        This browser does not support PDFs. Please download the PDF to view it: <a href="@filePath">Download PDF</a>
                    </iframe>
                </div>
                <h5>Proposal Status</h5>
                <form asp-action="ViewDetails" method="post">

                    @if (!string.IsNullOrEmpty(Model.p_sv_comment))
                    { 
                        <div class="col-sm-4"><strong>Supervisor Comment:</strong></div>
                        <div class="col-sm-8">@Model.p_sv_comment</div>
                    }

                    @if (!string.IsNullOrEmpty(Model.p_evaluator1_comment))
                    {
                        <div class="col-sm-4"><strong>Evaluator 1 Comment:</strong></div>
                        <div class="col-sm-8">@Model.p_evaluator1_comment</div>                    }
                    
                    @if (!string.IsNullOrEmpty(Model.p_evaluator2_comment))
                    {
                        <div class="col-sm-4"><strong>Evaluator 2 Comment:</strong></div>
                        <div class="col-sm-8">@Model.p_evaluator2_comment</div>                    }

                    @if (!string.IsNullOrEmpty(Model.p_sv_comment))
                    {
                        <input type="hidden" name="s_id" value="@Model.s_id" />
                        <div class="form-group">
                            <label for="st_id">Status</label>
                            <select id="st_id" name="st_id" class="form-control">
                                <option value="Pending" @(Model.st_id == "Pending" ? "selected" : "")>Pending</option>
                                <option value="Accepted" @(Model.st_id == "Accepted" ? "selected" : "")>Accepted</option>
                                <option value="Accepted with Conditions" @(Model.st_id == "Accepted with Conditions" ? "selected" : "")>Accepted with Conditions</option>
                                <option value="Rejected" @(Model.st_id == "Rejected" ? "selected" : "")>Rejected</option>
                            </select>
                        </div>
                        <h5>Comment</h5>
                        <div class="form-group">
                            <textarea id="comment" name="comment" class="form-control" rows="5"></textarea>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" name="s_id" value="@Model.s_id" />
                        <div class="form-group">
                            <label for="st_id">Status</label>
                            <select id="st_id" name="st_id" class="form-control" disabled>
                                <option value="Pending" @(Model.st_id == "Pending" ? "selected" : "")>Pending</option>
                                <option value="Accepted" @(Model.st_id == "Accepted" ? "selected" : "")>Accepted</option>
                                <option value="Accepted with Conditions" @(Model.st_id == "Accepted with Conditions" ? "selected" : "")>Accepted with Conditions</option>
                                <option value="Rejected" @(Model.st_id == "Rejected" ? "selected" : "")>Rejected</option>
                            </select>
                        </div>
                        <h5>Comment</h5>
                        <div class="form-group">
                            <textarea id="comment" name="comment" class="form-control" rows="5" disabled placeholder="Supervisor has not commented yet. Please wait until after supervisor has reviewed the proposal"></textarea>
                        </div>
                    }

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Scripts {
}
