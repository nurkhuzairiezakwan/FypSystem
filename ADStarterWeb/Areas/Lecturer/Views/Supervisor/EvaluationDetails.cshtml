@model ADStarter.Models.Proposal

@{
    ViewData["Title"] = "Proposal Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filePath = Url.Content($"{Model.p_file}");
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Evaluation Details</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="~/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Supervisor</li>
                        <li class="breadcrumb-item active">Evaluation Details</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h4>Proposal Title: @Model.p_title</h4>
                <div class="pdf-viewer">
                    <iframe src="@filePath" width="75%" height="600px">
                        This browser does not support PDFs. Please download the PDF to view it: <a href="@filePath">Download PDF</a>
                    </iframe>
                </div>
                <h5>Proposal Status</h5>
                <p>@Model.st_id</p>

                <h5>Supervisor Comment</h5>
                <p>@Model.p_sv_comment</p>  
                <h5>Evaluator 1 Comment</h5>
                <p>@Model.p_evaluator1_comment</p>
                <h5>Evaluator 2 Comment</h5>
                <p>@Model.p_evaluator2_comment</p>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Scripts {
}