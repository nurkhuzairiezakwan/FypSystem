@model ADStarter.Models.Proposal

@{
    ViewData["Title"] = "Proposal Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filePath = Url.Content($"{Model.p_file}");
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Evaluation Details</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="~/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Supervisor</li>
                        <li class="breadcrumb-item active">Evaluation Details</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- Container-fluid starts-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Back Button -->
                    <div class="mb-3">
                        <button type="button" class="btn btn-secondary" onclick="window.history.back();">Back</button>
                    </div>

                    <!-- Card for Proposal Title and File -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="card-title">Proposal Title: @Model.p_title</h4>
                        </div>
                        <div class="card-body">
                            <div class="pdf-viewer">
                                <iframe src="@filePath" width="100%" height="600px" style="border: none;">
                                    This browser does not support PDFs. Please download the PDF to view it: <a href="@filePath">Download PDF</a>
                                </iframe>
                            </div>
                        </div>
                    </div>

                    <!-- Card for Proposal Status and Comments -->
                    <div class="card">
                        <div class="card-header">
                            <h5>Proposal Status and Comments</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6>Proposal Status:</h6>
                                <p class="mb-0">@Model.st_id</p>
                            </div>

                            <div class="mb-3">
                                <h6>Supervisor Comment:</h6>
                                @if (!string.IsNullOrEmpty(Model.p_sv_comment))
                                {
                                    <p class="mb-0">@Model.p_sv_comment</p>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">No supervisor comment available.</p>
                                }
                            </div>

                            <div class="mb-3">
                                <h6>Evaluator 1 Comment:</h6>
                                @if (!string.IsNullOrEmpty(Model.p_evaluator1_comment))
                                {
                                    <p class="mb-0">@Model.p_evaluator1_comment</p>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">No evaluator 1 comment available.</p>
                                }
                            </div>

                            <div class="mb-3">
                                <h6>Evaluator 2 Comment:</h6>
                                @if (!string.IsNullOrEmpty(Model.p_evaluator2_comment))
                                {
                                    <p class="mb-0">@Model.p_evaluator2_comment</p>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">No evaluator 2 comment available.</p>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- End Card -->
                </div>
            </div>
        </div>
        <!-- Container-fluid Ends-->
    </div>
</div>

@section Scripts {
}
