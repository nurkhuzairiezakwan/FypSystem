@using ADStarter.Models.ViewModels
@model List<StudentViewModels>

@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Student List</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="~/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Supervisor</li>
                        <li class="breadcrumb-item active">Student List</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="card">
                <div class="card-body">
                    @if (Model.Count == 0)
                    {
                        <div class="text-center">
                            <p>No students found</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table id="studentTable" class="table table-bordered display">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Matric Number</th>
                                        <th>Contact</th>
                                        <th>Semester</th>
                                        <th>Academic Session</th>
                                        <th>Proposal Status</th>
                                        <th>Proposal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@student.user_name</td>
                                            <td>@student.user_matric</td>
                                            <td>@student.user_contact</td>
                                            <td>@student.s_semester</td>
                                            <td>@student.s_academic_session</td>
                                            <td>
                                                <span class="badge rounded-pill @(student.st_id == "Pending" ? "badge-light-warning" :
                                                                                 student.st_id == "Approved" ? "badge-light-success" :
                                                                                 student.st_id == "Rejected" ? "badge-light-danger" :
                                                                                 "badge-light-secondary")">
                                                    @(!string.IsNullOrEmpty(student.st_id) ? student.st_id : "Data not found")
                                                </span>
                                            </td>
                                            <td>
                                                @if (student.st_id == "Pending")
                                                {
                                                    <a href="@Url.Action("ReviewProposal", new { id = student?.s_id })" class="btn btn-primary">Review</a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("EvaluationDetails", new { id = student?.s_id })" class="btn btn-primary">Evaluation</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@*     <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css" /> *@
    <script>
        $(document).ready(function () {
            $('#studentTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true
            });
        });
    </script>
}
