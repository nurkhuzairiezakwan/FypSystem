@using ADStarter.Models.ViewModels
@model List<StudentVM>

@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Student List</h3>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <svg class="stroke-icon">
                                    <use href="~/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Supervisor</li>
                        <li class="breadcrumb-item active">Student List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0 card-no-border">
                        <div class="row">
                            @* <div class="col-md-4">
                                <select id="semesterFilter" class="form-control">
                                    <option value="">Select Semester</option>
                                    @foreach (var semester in ViewBag.Semesters as IEnumerable<string>)
                                    {
                                        <option value="@semester">@semester</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select id="academicSessionFilter" class="form-control">
                                    <option value="">Select Academic Session</option>
                                    @foreach (var session in ViewBag.AcademicSessions as IEnumerable<string>)
                                    {
                                        <option value="@session">@session</option>
                                    }
                                </select>
                            </div> 
                            <div class="col-md-4">
                                <button id="filterButton" class="btn btn-primary">Filter</button>
                            </div>*@
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="display" id="basic-6">
                                <thead>
                                    <tr>
                                        <th>Matric Number</th>
                                        <th>Full Name</th>
                                        <th>Contact</th>
                                        <th>Semester</th>
                                        <th>Academic Session</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@student.user_matric</td>
                                            <td>@student.user_name</td>
                                            <td>@student.user_contact</td>
                                            <td>@student.s_semester</td>
                                            <td>@student.s_academic_session</td>
                                            <td>
                                                <a href="@Url.Action("ReviewProposal", new { id = student?.s_id })" class="btn btn-primary">Review</a>
                                                <a href="@Url.Action("EvaluationDetails", new { id = student?.s_id })" class="btn btn-primary">Evaluation</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

